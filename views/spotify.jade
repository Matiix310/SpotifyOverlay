doctype html
html
  head
    title= "Spotify Overlay"
    link(rel='stylesheet', href='/stylesheets/overlayStyle.css')
    link(rel="preconnect" href="https://fonts.gstatic.com")
    link(href="https://fonts.googleapis.com/css2?family=Montserrat:wght@200;400&display=swap" rel="stylesheet")
  body

    h1(id="token" class="hidden")= token
    h1(id="refresh" class="hidden")= refresh

    div(id="overlay" class="mainContainer")
        image(id="image")
        div(class="container")
            h1(id="title" class="bold")="N/A"
            h1(id="meta" class="light")="N/A"
            div(class="progress")
                div(id="progress" class="progress-value")

    h1(id="info")= ""

  script(src="/javascripts/js.js")